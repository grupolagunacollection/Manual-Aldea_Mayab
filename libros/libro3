<script>
const PAGES = {
  'p-ev01':    'EV ¬∑ Estacionamiento ¬∑ EV-01 Asignaci√≥n de Espacios',
  'p-aac01':   'AAC ¬∑ Amenidades ¬∑ AAC-01 Canchas de P√°del',
  'p-aac02':   'AAC ¬∑ Amenidades ¬∑ AAC-02 Asadores',
  'p-aac03':   'AAC ¬∑ Amenidades ¬∑ AAC-03 Muelle y Laguna',
  'p-aac04':   'AAC ¬∑ Amenidades ¬∑ AAC-04 Firepit',
  'p-mi01':    'MI ¬∑ Mantenimiento ¬∑ MI-01 PTAR',
  'p-mi02':    'MI ¬∑ Mantenimiento ¬∑ MI-02 Albercas',
  'p-mi03':    'MI ¬∑ Mantenimiento ¬∑ MI-03 Residuos S√≥lidos',
  'p-pe-gen':  'PE ¬∑ Emergencias ¬∑ PE-00 Protocolo General',
  'p-pe01':    'PE ¬∑ Emergencias M√©dicas ¬∑ PE-01 Emergencias M√©dicas',
  'p-pe02':    'PE ¬∑ Emergencias F√≠sicas ¬∑ PE-02 Incendios',
  'p-pe-fauna':'PE ¬∑ Emergencias M√©dicas ¬∑ PE-03 Fauna Silvestre',
  'p-pe04':    'PE ¬∑ Emergencias F√≠sicas ¬∑ PE-04 Huracanes',
  'p-pe05':    'PE ¬∑ Emergencias F√≠sicas ¬∑ PE-05 Intrusos',
  'p-pe06':    'PE ¬∑ Emergencias Ambientales ¬∑ PE-06 Derrames en Laguna',
  'p-pe07':    'PE ¬∑ Emergencias Ambientales ¬∑ PE-07 Fallo Tecnol√≥gico',
  'p-equip':   'Equipos ¬∑ Inventario de Equipos de Emergencia',
};

function show(id){
  document.querySelectorAll('.page').forEach(p=>p.classList.remove('active'));
  document.querySelectorAll('.nav-link,.nav-sub').forEach(n=>n.classList.remove('active'));
  const page=document.getElementById(id);
  if(page) page.classList.add('active');
  const label=PAGES[id]||'';
  const parts=label.split(' ¬∑ ');
  const bc=document.getElementById('breadcrumb');
  if(parts.length>1){
    bc.innerHTML='Libro III &rsaquo; '+parts.slice(0,-1).join(' &rsaquo; ')+' &rsaquo; <strong>'+parts[parts.length-1]+'</strong>';
  } else {
    bc.innerHTML='Libro III &rsaquo; <strong>'+label+'</strong>';
  }
  document.querySelectorAll('.nav-link,.nav-sub').forEach(el=>{
    if((el.getAttribute('onclick')||'').includes("'"+id+"'")) el.classList.add('active');
  });
  window.scrollTo({top:0,behavior:'smooth'});
}

function toggleGroup(btn){
  const grp=btn.closest('.nav-group');
  const wasOpen=grp.classList.contains('open');
  document.querySelectorAll('.nav-group').forEach(g=>g.classList.remove('open'));
  document.querySelectorAll('.nav-group-btn').forEach(b=>b.classList.remove('active'));
  if(!wasOpen){grp.classList.add('open');btn.classList.add('active');}
}

function searchNav(val){
  const v=val.toLowerCase().trim();
  document.querySelectorAll('.nav-link,.nav-sub').forEach(el=>{
    if(!v){el.style.display='';el.classList.remove('hl');}
    else{
      const match=el.textContent.toLowerCase().includes(v);
      el.style.display=match?'':'none';
      el.classList.toggle('hl',match);
      if(match) el.closest('.nav-group')?.classList.add('open');
    }
  });
}

document.addEventListener('keydown',e=>{
  if(e.key==='Escape'){
    const inp=document.querySelector('.sb-search input');
    inp.value='';searchNav('');inp.blur();
  }
});
</script>
</body>
</html>
