<script>
const PAGES = {
  'p-cover':'Libro VI · Portada',
  'p-11':'1.0 Marco General · 1.1 Alcance y Marco Legal',
  'p-21':'2.0 Reglamento Interno · 2.1 Reglamento de Convivencia',
  'p-22':'2.0 Reglamento Interno · 2.2 Sanciones y Multas',
  'p-31':'3.0 Asambleas · 3.1 Convocatoria y Quórum',
  'p-32':'3.0 Asambleas · 3.2 Desarrollo y Actas',
  'p-41':'4.0 Protección de Datos · 4.1 Política de Privacidad',
  'p-42':'4.0 Protección de Datos · 4.2 Aviso de Privacidad',
  'p-51':'5.0 Seguros y Permisos · 5.1 Gestión de Seguros',
  'p-52':'5.0 Seguros y Permisos · 5.2 Permisos y Licencias',
  'p-61':'6.0 Autoridades · 6.1 Atención a Autoridades',
};
function show(id){
  document.querySelectorAll('.page').forEach(p=>p.classList.remove('active'));
  document.querySelectorAll('.nav-link,.nav-sub').forEach(n=>n.classList.remove('active'));
  const page=document.getElementById(id);
  if(page)page.classList.add('active');
  const label=PAGES[id]||'';
  const parts=label.split(' · ');
  const bc=document.getElementById('breadcrumb');
  bc.innerHTML='Libro IV &rsaquo; '+parts.slice(0,-1).join(' &rsaquo; ')+' &rsaquo; <strong>'+parts[parts.length-1]+'</strong>';
  document.querySelectorAll('.nav-link,.nav-sub').forEach(el=>{
    if((el.getAttribute('onclick')||'').includes("'"+id+"'"))el.classList.add('active');
  });
  window.scrollTo({top:0,behavior:'smooth'});
  if(window.innerWidth<=768&&window.closeSidebar)window.closeSidebar();
}

function toggleGroup(btn){
  const group=btn.parentElement;
  group.classList.toggle('open');
}

(function(){
  function _open(){
    document.getElementById('sidebar').classList.add('open');
    document.getElementById('hamburger').classList.add('open');
    document.getElementById('overlay').classList.add('visible');
    document.body.style.overflow='hidden';
  }
  function _close(){
    document.getElementById('sidebar').classList.remove('open');
    document.getElementById('hamburger').classList.remove('open');
    document.getElementById('overlay').classList.remove('visible');
    document.body.style.overflow='';
  }
  window.toggleSidebar=function(){if(document.getElementById('sidebar').classList.contains('open')){_close();}else{_open();}};window.closeSidebar=_close;
  function init(){
    var hb=document.getElementById('hamburger');
    var ov=document.getElementById('overlay');
    if(hb){
      hb.addEventListener('click',function(e){e.stopPropagation();window.toggleSidebar();});
      hb.addEventListener('touchend',function(e){e.preventDefault();e.stopPropagation();window.toggleSidebar();},{passive:false});
    }
    if(ov){ov.addEventListener('click',_close);}
  }

  // Deep-link: si la URL tiene #p-XX al abrir, navegar directamente a esa página
  function handleDeepLink(){
    var hash = window.location.hash;
    if(hash){
      var id = hash.replace('#','');
      if(document.getElementById(id)){
        show(id);
      }
    }
  }
  if(document.readyState==='loading'){
    document.addEventListener('DOMContentLoaded', function(){ init(); handleDeepLink(); });
  } else {
    init(); handleDeepLink();
  }

})();

</script>
</body>
</html>
